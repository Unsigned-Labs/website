---
const resources = [
  { name: "Our Vision", url: "/blog/our-vision" },
  { name: "Support Us", url: "/support" },
  {
    name: "Cyber Swaraj",
    url: "https://www.youtube.com/playlist?list=PLVksdnIVEIUWvhc8iC0-YzCbRZIh8L-fQ",
    external: true,
  },
];

const hengdang = [
  { name: "Hengdang Protocol", url: "https://hengdang-protocol.github.io/", external: true },
  {
    name: "Hengdang Protocol Spec",
    url: "https://github.com/Hengdang-Protocol/spec/",
    external: true,
  },
  {
    name: "Hengdang Matrix Community",
    url: "https://matrix.to/#/#hengdang:matrix.org",
    external: true,
  },
];

const social = [
  { name: "GitHub", url: "https://github.com/unsigned-labs", external: true },
  {
    name: "Nostr",
    url: "https://nostr.at/npub12ucpp6c0g070cffu9z2c9rfsha5nnvzk8p8ze3ny3aqqj6k2aa8q0c52sm",
    external: true,
  },
  { name: "Twitter", url: "https://x.com/unsignedlabs", external: true },
  { name: "Discord", url: "https://discord.gg/dDa9m6hKdr", external: true },
];
---

<footer class="mt-8">
  <div class="container mx-auto px-6 pt-8 pb-6">
    <div class="flex flex-wrap justify-between">
      <div class="w-1/2 md:w-1/4 mb-8">
        <h3 class="text-sm uppercase text-gray-500 tracking-wider mb-4 font-medium">RESOURCES</h3>
        <ul class="space-y-2">
          {
            resources.map((item) => (
              <li>
                <a
                  href={item.url}
                  class="text-gray-300 hover:text-purple-400 transition-colors text-sm flex items-center group"
                  {...(item.external ? { target: "_blank", rel: "noopener" } : {})}
                >
                  {item.name}
                  {item.external && (
                    <span
                      data-lucide="external-link"
                      class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity"
                    />
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="w-1/2 md:w-1/4 mb-8">
        <h3 class="text-sm uppercase text-gray-500 tracking-wider mb-4 font-medium">HENGDANG</h3>
        <ul class="space-y-2">
          {
            hengdang.map((item) => (
              <li>
                <a
                  href={item.url}
                  class="text-gray-300 hover:text-purple-400 transition-colors text-sm flex items-center group"
                  {...(item.external ? { target: "_blank", rel: "noopener" } : {})}
                >
                  {item.name}
                  {item.external && (
                    <span
                      data-lucide="external-link"
                      class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity"
                    />
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="w-1/2 md:w-1/4 mb-8">
        <h3 class="text-sm uppercase text-gray-500 tracking-wider mb-4 font-medium">CONNECT</h3>
        <ul class="space-y-2">
          {
            social.map((item) => (
              <li>
                <a
                  href={item.url}
                  class="text-gray-300 hover:text-purple-400 transition-colors text-sm flex items-center group"
                  target="_blank"
                  rel="noopener"
                >
                  {item.name}
                  <span
                    data-lucide="external-link"
                    class="h-3 w-3 ml-1 opacity-0 group-hover:opacity-100 transition-opacity"
                  />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom credits -->
    <div class="border-t border-gray-800 mt-4 pt-6 flex justify-center">
      <p class="text-gray-500 text-sm font-light">
        कर्मण्येवाधिकारस्ते मा फलेषु कदाचन | <br />
        मा कर्मफलहेतुर्भूर्मा ते सङ्गोऽस्त्वकर्मणि ||
      </p>
    </div>
  </div>
</footer>

<script>
  import { createIcons, ExternalLink } from "lucide";

  document.addEventListener("DOMContentLoaded", () => {
    createIcons({
      icons: {
        ExternalLink,
      },
    });
  });
</script>

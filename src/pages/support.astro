---
import Layout from "../layouts/Layout.astro";
import QRCode from "qrcode";

const bolt12 =
  "bitcoin:?";
const lightningAddress = "basantagoswami@blink.sv";
const nostrLink =
  "https://nostr.at/npub1gmm2ehusvs35zgh6pq84m8hkj4ea0ygy3c9j2e3slzhjjce3kmns5tdaz2";

// Generate QR code as data URL
const qrCodeDataURL = await QRCode.toDataURL(bolt12, {
  errorCorrectionLevel: "H",
  margin: 1,
  width: 300,
  color: {
    dark: "#000",
    light: "#fff",
  },
});
---

<Layout title="Support" description="Support Unsigned Labs and our open-source projects">
  <div class="min-h-screen pt-32 pb-24">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <header class="mb-16 text-center">
          <h1 class="text-5xl md:text-6xl font-light mb-6 tracking-tight">Support Our <span class="text-purple font-medium">Work</span></h1>
          <p class="text-xl font-light text-gray-400 max-w-lg mx-auto">
            Help us build tools for digital sovereignty by contributing to our work
          </p>
        </header>
        
        <!-- Support methods grid -->
        <div class="grid grid-cols-1 gap-8">
          <!-- Lightning Address -->
          <div class="card bg-card hover:bg-card-hover border border-gray-800 hover:border-purple transition-all duration-300 p-6 rounded-lg">
            <div class="flex items-start justify-between">
              <div>
                <h2 class="text-xl font-medium mb-4 text-purple-400">Lightning Address</h2>
                <p class="mb-4 text-gray-400 text-sm">The simplest way to send Bitcoin over Lightning</p>
              </div>
              <svg class="w-6 h-6 text-purple-400" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13 10V3L4 14H11V21L20 10H13Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            
            <div class="flex items-center justify-between bg-black bg-opacity-50 p-3 rounded-lg mt-2">
              <code class="text-gray-300 font-mono text-sm">{lightningAddress}</code>
              <button
                class="copy-button ml-4 text-purple-400 hover:text-purple-300 transition-colors text-sm"
                data-copy={lightningAddress}
              >
                Copy
              </button>
            </div>
          </div>
          
          <!-- BOLT12 QR -->
          <div class="card bg-card hover:bg-card-hover border border-gray-800 hover:border-purple transition-all duration-300 p-6 rounded-lg">
            <h2 class="text-xl font-medium mb-4 text-purple-400">BOLT12 Payment Code</h2>
            <div class="flex flex-col md:flex-row items-center">
              <div class="mb-6 md:mb-0 md:mr-6 flex-shrink-0">
                <img src={qrCodeDataURL} alt="BOLT12 QR Code" class="w-40 h-40 rounded-lg" />
              </div>
              <div class="flex-grow space-y-4">
                <p class="text-gray-400 text-sm">
                  Scan with a BOLT12-compatible wallet for an enhanced Lightning experience
                </p>
                <button
                  class="copy-button px-4 py-2 bg-purple-600 text-white text-sm rounded-lg hover:bg-purple-700 transition-colors w-full"
                  data-copy={bolt12}
                >
                  Copy BOLT12 Code
                </button>
              </div>
            </div>
          </div>
          
          <!-- WebLN -->
          <div class="card bg-card hover:bg-card-hover border border-gray-800 hover:border-purple transition-all duration-300 p-6 rounded-lg">
            <h2 class="text-xl font-medium mb-4 text-purple-400">Quick Payment with WebLN</h2>
            <p class="text-gray-400 text-sm mb-4">
              If you have a WebLN-supported wallet like Alby installed, make a payment directly through your browser
            </p>
            <button
              id="webln-button"
              class="w-full bg-purple-600 text-white py-3 rounded-lg flex items-center justify-center space-x-3 hover:bg-purple-700 transition-colors text-base font-medium"
            >
              ⚡️ Zap with WebLN
            </button>
          </div>
          
          <!-- Nostr -->
          <div class="card bg-card hover:bg-card-hover border border-gray-800 hover:border-purple transition-all duration-300 p-6 rounded-lg">
            <h2 class="text-xl font-medium mb-4 text-purple-400">Zap on Nostr</h2>
            <p class="text-gray-400 text-sm mb-4">You can zap us on nostr, which helps to show your support publicly</p>
            <a
              href={nostrLink}
              target="_blank"
              rel="noopener noreferrer"
              class="block text-purple-400 hover:text-purple-300 transition-colors flex items-center"
            >
              Visit profile on Nostr
              <svg class="ml-2 w-4 h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 13V19C18 19.5304 17.7893 20.0391 17.4142 20.4142C17.0391 20.7893 16.5304 21 16 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V8C3 7.46957 3.21071 6.96086 3.58579 6.58579C3.96086 6.21071 4.46957 6 5 6H11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M15 3H21V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M10 14L21 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
          
          <!-- Geyser Fund -->
          <div class="card bg-card hover:bg-card-hover border border-gray-800 hover:border-purple transition-all duration-300 p-6 rounded-lg">
            <h2 class="text-xl font-medium mb-4 text-purple-400">Support Hengdang Development</h2>
            <p class="text-gray-400 text-sm mb-4">
              If you want to contribute specifically to the development of Hengdang and its reference
              implementation
            </p>
            <a
              href="https://geyser.fund/project/hengdang"
              target="_blank"
              rel="noopener noreferrer"
              class="block text-purple-400 hover:text-purple-300 transition-colors flex items-center"
            >
              Support on Geyser
              <svg class="ml-2 w-4 h-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 13V19C18 19.5304 17.7893 20.0391 17.4142 20.4142C17.0391 20.7893 16.5304 21 16 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V8C3 7.46957 3.21071 6.96086 3.58579 6.58579C3.96086 6.21071 4.46957 6 5 6H11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M15 3H21V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M10 14L21 3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // WebLN functionality
  const weblnButton = document.getElementById('webln-button');
  if (weblnButton) {
    weblnButton.addEventListener('click', async () => {
      try {
        // Check if WebLN is available
        if (typeof window.webln === 'undefined') {
          alert('WebLN is not available. Please install a compatible wallet like Alby.');
          return;
        }
        
        await window.webln.enable();
        await window.webln.sendPayment('basantagoswami@blink.sv');
        
        // Show success message
        weblnButton.textContent = 'Thank you for the zap! ⚡';
        weblnButton.classList.add('bg-green-600');
        weblnButton.classList.remove('bg-purple-600', 'hover:bg-purple-700');
        
        setTimeout(() => {
          weblnButton.textContent = '⚡️ Zap with WebLN';
          weblnButton.classList.remove('bg-green-600');
          weblnButton.classList.add('bg-purple-600', 'hover:bg-purple-700');
        }, 3000);
      } catch (error) {
        console.error('WebLN payment failed:', error);
        weblnButton.textContent = 'Payment failed. Try again?';
        
        setTimeout(() => {
          weblnButton.textContent = '⚡️ Zap with WebLN';
        }, 3000);
      }
    });
  }

  // Copy functionality
  const copyButtons = document.querySelectorAll('.copy-button');
  copyButtons.forEach((button) => {
    button.addEventListener('click', async () => {
      const textToCopy = button.getAttribute('data-copy');
      if (!textToCopy) return;

      try {
        await navigator.clipboard.writeText(textToCopy);
        const originalText = button.textContent.trim();
        button.textContent = 'Copied!';
        button.classList.add('text-green-400');

        setTimeout(() => {
          button.textContent = originalText;
          button.classList.remove('text-green-400');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>

<style>
  .bg-card {
    background-color: rgba(15, 15, 15, 0.5);
  }
  
  .bg-card-hover {
    background-color: rgba(20, 20, 20, 0.6);
  }
  
  .text-purple {
    color: var(--color-purple);
  }
  
  .card {
    transform: translateY(0);
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 30px rgba(123, 104, 238, 0.1);
  }
</style>